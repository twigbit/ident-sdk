<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Ident SDK Sample App"
              android:textSize="22sp"
              android:gravity="center"
              android:fontFamily="@font/nexa_bold"
              android:layout_marginTop="48dp"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="200dp"
               app:layout_constraintStart_toStartOf="parent"
               android:src="@drawable/illu_twigbit_ident"
               android:scaleType="fitCenter"
               android:layout_marginTop="24dp" android:id="@+id/imageView"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:paddingHorizontal="48dp"
                  android:layout_marginTop="72dp"
                  android:clipToPadding="false"
                  android:id="@+id/linearLayout">
        <android.support.design.button.MaterialButton android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:id="@+id/buttonDropIn"
                                                      android:backgroundTint="@color/colorPrimaryDark"
                                                      android:text="Test Drop-In UI"/>
        <android.support.design.button.MaterialButton android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:id="@+id/buttonCustomAuth"
                                                      android:backgroundTint="@color/colorPrimaryDark"
                                                      android:text="Test Custom Auth UI"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content"
                  android:clipToPadding="false"
                  android:gravity="bottom"
                  android:layout_marginBottom="8dp">

        <TextView android:layout_width="match_parent" android:gravity="center" android:layout_height="wrap_content"
                  android:layout_marginTop="24dp" android:fontFamily="@font/nexa_bold" android:text="powered by"/>
        <ImageView android:layout_width="150dp" android:layout_height="wrap_content" android:layout_gravity="center|bottom"
                   android:layout_marginBottom="8dp"
                   android:src="@drawable/twigbit_logo_text"/>
    </LinearLayout>

</LinearLayout>