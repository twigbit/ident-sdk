<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="IdentTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="twigbitIdentTextAppearanceHeadline">@style/textAppearanceHeadline</item>
        <item name="twigbitIdentTextAppearanceOverline">@style/TextAppearanceOverline</item>
        <item name="twigbitIdentTextAppearanceBody">@style/textAppearanceBody</item>
    </style>

    <style name="TextAppearanceOverline" parent="TextAppearance.MaterialComponents.Overline">
        <!--<item name="android:textSize">30sp</item>-->
    </style>
    <style name="textAppearanceBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textAppearanceHeadline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="textAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="IdentTheme.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/twigbitIdentTextAppearanceButton</item>
    </style>
</resources>
